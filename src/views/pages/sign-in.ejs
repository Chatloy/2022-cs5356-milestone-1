        .then((userCredential) => {
          // Signed in
        const user = userCredential.user;
        user.getIdToken().then(idToken => {
          //window.localStorage.setItem('token', idToken)
          fetch('/sessionLogin',{
            method: 'POST',
            header: {'Content-Type':'application/json'},
            body:JSON.stringify({idToken})
          }).then(function(response){
